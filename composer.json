{
    "require": {
        "guzzlehttp/psr7": "^1.7",
        "http-interop/http-factory-guzzle": "^1.0",
        "laminas/laminas-diactoros": "^2.5",
        "php-di/php-di": "^6.3",
        "selective/basepath": "^2.0",
        "slim/psr7": "^1.3",
        "slim/slim": "4.*"
    },
	"autoload": {
        "psr-4": {
            "App\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests/"
        }
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true,
	"platform-check": false
    }
}
